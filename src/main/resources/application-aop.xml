<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

    <bean id="annotationAdvice" class="com.gk.proxy.aop.advice.annotation.AnnotationAdvice"/>
    <bean id="bar" class="com.gk.bean.Bar"/>
    <bean id="ticketServiceBeforeAdvice" class="com.gk.proxy.aop.advice.TicketServiceBeforeAdvice"/>

    <aop:config>
        <aop:pointcut id="p1" expression="execution(public * com.gk.bean..*.bar(..))"/>
        <aop:pointcut id="p2" expression="execution(public * com.gk.bean..*.foo(..))"/>
        <aop:aspect id="id" ref="annotationAdvice">
            <aop:before method="before" pointcut="execution(public * com.gk.bean..*.bar(..))"/>
            <aop:after method="after" pointcut-ref="p1"/>
            <aop:around method="around" pointcut-ref="p1"/>
            <aop:after-returning method="afterReturning" pointcut-ref="p1"/>
            <aop:after-throwing method="afterThrowing" pointcut-ref="p2"/>
        </aop:aspect>
    </aop:config>
    
    <aop:config>
        <aop:pointcut id="p3" expression="execution(public * com.gk.bean..*.bar(..))"/>
        <aop:advisor advice-ref="ticketServiceBeforeAdvice" pointcut-ref="p3"/>
    </aop:config>
</beans>